<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.aa.myapplication.companylocation"
    android:background="#2fa9de"
    android:weightSum="1">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your Company Location"
    android:id="@+id/yourcompanylocation"
    android:textSize="25dp"
    android:textStyle="bold"
    android:textColor="#ffffff" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Langtitude"
        android:id="@+id/langtitudeid"
        android:background="#ffffff"
        android:textColorHint="#a9a9a9"
        android:layout_weight="0.04" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:id="@+id/latitudeid"
        android:textColorHint="#a9a9a9"
        android:background="#ffffff"
        android:layout_weight="0.04" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:id="@+id/addressid"
        android:background="#ffffff"
        android:layout_weight="0.05"
        android:textColorHint="#a9a9a9" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Usernumbers"
        android:id="@+id/usernumbersid"
        android:background="#ffffff"
        android:layout_weight="0.05"
        android:textColorHint="#a9a9a9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="CompanyID"
        android:id="@+id/Companyid"
        android:background="#ffffff"
        android:layout_weight="0.05"
        android:textColorHint="#a9a9a9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendid"
        android:textStyle="bold"
        android:background="#8e8e8e" />
</LinearLayout>
